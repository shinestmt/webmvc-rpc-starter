# indicate this is the root of the project
root = true

[*.java]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.yml]
indent_style = space
indent_size = 2
max_line_length = 80

[pom.xml]
indent_style = tab
indent_size = 4
max_line_length = 80

[*.md]
indent_style = space
trim_trailing_whitespace = false
